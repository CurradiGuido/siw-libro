<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender per la console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender per file giornaliero -->
    <appender name="DAILY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/readhub.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/readhub-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger per il package controller: SOLO FILE, NO console -->
    <logger name="it.uniroma3.siw_libro" level="INFO" additivity="false">
        <appender-ref ref="DAILY_FILE" />
    </logger>

    <!-- Root logger: stampa tutto su console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>

